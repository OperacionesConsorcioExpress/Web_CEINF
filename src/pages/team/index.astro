---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import TeamGrid from '@components/sections/TeamGrid.astro';

const seoTitle = "Equipo";
const seoDescription = "Nuestro equipo está formado por un grupo diverso de personas apasionadas por la tecnología y la innovación. Cada miembro aporta su propia experiencia y habilidades únicas, lo que nos permite abordar desafíos complejos y ofrecer soluciones efectivas. Desde desarrolladores hasta diseñadores, todos trabajamos juntos para crear un ambiente colaborativo y dinámico que fomenta el crecimiento y la creatividad.";

const heroContent = {
    title: "Nuestro equipo de trabajo",
    description: "Conoce a las personas detrás de la magia.",
}

---

<Layout title={seoTitle} description={seoDescription}>
    <InnerHero content={heroContent}  />
    <TeamGrid padding="base" />
</Layout>